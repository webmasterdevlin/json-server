{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.ns"],
    "strict": true
  },
  "importMap": "./deno_import_map.json",
  "tasks": {
    "start": "deno run --allow-read --allow-write --allow-net --allow-run mod.ts",
    "run": "deno run --allow-read --allow-write --allow-net --allow-run mod.ts"
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}